<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/striker" >

    
    
	<ScrollView android:layout_width="fill_parent"
	     android:layout_height="fill_parent">
	      
	       <LinearLayout android:layout_width="fill_parent" 
	           android:layout_height="wrap_content" 
	           android:orientation="vertical" > 
	           <ImageView android:id="@+id/imageViewopenOfferlayout" 
        android:layout_width="wrap_content" 
        android:layout_height="350dp"
         android:layout_alignParentTop="true" 
        android:layout_centerHorizontal="true" 
        /> 
        <LinearLayout
        android:id="@+id/blankView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        
		android:orientation="vertical"
         >
         

    <TextView
        android:id="@+id/textViewOfferOpen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Offer is valid"
        android:gravity="center" 
        android:textColor="#0b110b"
       
        android:textSize="18dp" />
     <TextView
        android:id="@+id/textViewOfferOpen1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="You can use this offer"
        android:gravity="center" 
        android:textColor="#0b110b"
        
        android:textSize="10dp" />
     <Button
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Avail this offer"
        android:gravity="center" 
        android:textColor="#ffffff"
        android:background="@drawable/rounded_rectangle"
        android:textSize="18dp"
       />
    
    </LinearLayout> 
	           <LinearLayout
        android:id="@+id/abcd"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        
		android:orientation="horizontal"
         >
    <ImageView
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:src="@drawable/time"	
		android:background="#FFA500"
        ></ImageView>     

    <TextView
        android:id="@+id/defg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="TextView"
        android:gravity="center" 
        android:textColor="#0b110b"
        android:background="#ffffff"
        android:textSize="18dp" />
    
    </LinearLayout> 
	          
	           <LinearLayout
        android:id="@+id/abcdeOpenOffer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
		android:orientation="horizontal"
         >
    <ImageView
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:src="@drawable/time"	
		android:background="#FFA500"
        ></ImageView>     

    <TextView
        android:id="@+id/defghOpenOffer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="TextView"
        android:gravity="center" 
        android:textColor="#0b110b"
        android:background="#ffffff"
        android:textSize="18dp" />
    
    </LinearLayout>
      <LinearLayout
        android:id="@+id/abcdefOpenOffer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
		android:orientation="horizontal"
         >
    <ImageView
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:src="@drawable/time"	
		android:background="#FFA500"
        ></ImageView>     

    <TextView
        android:id="@+id/defghiOpenOffer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="TextView"
        android:gravity="center" 
        android:textColor="#0b110b"
        android:background="#ffffff"
        android:textSize="18dp" />
    
    </LinearLayout>
	</LinearLayout>
	</ScrollView>





</RelativeLayout>
